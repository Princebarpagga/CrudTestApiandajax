@model codeFirstCrud.Models.Employee

<div class="modal-header">
    <h4 class="modal-title">Delete Employee</h4>
</div>
<div class="modal-body">
    <p>Are you sure you want to delete employee: @Model.EmployeeName?</p>
</div>


<div class="modal-footer">
    <form action="@Url.Action("Delete", "Employee", new { id = Model.EmpId })" method="post" class="form-horizontal" role="form">
        @Html.AntiForgeryToken()
        <button type="submit" class="btn btn-danger">Delete</button>
        <button type="button" class="btn btn-default" onclick="closePopup()">Cancel</button>
    </form>
</div>


<script>
    function closePopup() {
        $('#deleteEmployeeModal').modal('hide');
    }
</script>
